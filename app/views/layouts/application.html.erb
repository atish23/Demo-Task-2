<!DOCTYPE html>
<html>
  <head>
    <title>DigitsTask</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    	 <% unless flash.empty? %>
    	  <script type="text/javascript">
    	      <% flash.each do |f| %>
    	      <% type = f[0].to_s.gsub('alert', 'error').gsub('notice', 'info') %>
    	     	 toastr['<%= type %>']('<%= f[1] %>');
    	      <% end %>
    	  </script>
	     <% end %>
      <%= render "layouts/nav"%>
      <div class="container">

        <%= yield %>
      </div>

  </body>
</html>
